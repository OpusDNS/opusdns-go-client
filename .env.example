# OpusDNS API Configuration
# Copy this file to .env and fill in your values

# Required: Your OpusDNS API key
# Get this from https://dashboard.opusdns.com or via API
OPUSDNS_API_KEY=opk_your_api_key_here

# Optional: API endpoint (defaults to production)
# Production: https://api.opusdns.com
# Sandbox: https://sandbox.opusdns.com
OPUSDNS_API_ENDPOINT=https://sandbox.opusdns.com

# Optional: TTL for DNS records in seconds (default: 60)
OPUSDNS_TTL=60

# Optional: HTTP timeout in seconds (default: 30)
OPUSDNS_HTTP_TIMEOUT=30

# Optional: Maximum retry attempts for transient failures (default: 3)
OPUSDNS_MAX_RETRIES=3

# Optional: DNS propagation polling interval in seconds (default: 6)
OPUSDNS_POLLING_INTERVAL=6

# Optional: DNS propagation timeout in seconds (default: 60)
OPUSDNS_PROPAGATION_TIMEOUT=60

# Optional: DNS resolvers for propagation checks (comma-separated, default: 8.8.8.8:53,1.1.1.1:53)
OPUSDNS_DNS_RESOLVERS=8.8.8.8:53,1.1.1.1:53
