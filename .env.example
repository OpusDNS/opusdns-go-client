# OpusDNS API Configuration
# Copy this file to .env and fill in your values

# Required: Your OpusDNS API key
# Get this from https://dashboard.opusdns.com
OPUSDNS_API_KEY=opk_your_api_key_here

# Optional: API endpoint (defaults to production)
# Production: https://api.opusdns.com
# Sandbox: https://sandbox.opusdns.com
OPUSDNS_API_ENDPOINT=https://api.opusdns.com

# Optional: TTL for DNS records in seconds (default: 60)
OPUSDNS_TTL=60

# Optional: HTTP timeout in seconds (default: 30)
OPUSDNS_HTTP_TIMEOUT=30

# Optional: Maximum retry attempts for transient failures (default: 3)
OPUSDNS_MAX_RETRIES=3
